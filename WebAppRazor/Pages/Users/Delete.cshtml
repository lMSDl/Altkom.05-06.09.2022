@page
@model WebAppRazor.Pages.Users.DeleteModel
@{
}

<div>
    <table class="table">
        <thead>
            <tr>
                <partial name="_UserHeader" for="@Model.SelectedUser" />
            </tr>
        </thead>
        <tbody>
            <tr>
                @await Html.PartialAsync("_UserBody", @Model.SelectedUser)
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm(FormMethod.Post))
{
    <input type="hidden" asp-for="@Model.SelectedUser!.Id" />

    <input type="submit" value="Delete" class="btn" />
    <a asp-page="./Index" class="btn">Cancel</a>
}