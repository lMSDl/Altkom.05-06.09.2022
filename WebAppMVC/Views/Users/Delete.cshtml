@model Models.User


<div>
    <table class="table">
        <thead>
            <tr>
                <partial name="_UserHeader" for="@Model" />
            </tr>
        </thead>
        <tbody>
                <tr>
                    @await Html.PartialAsync("_UserBody", @Model)
                </tr>
        </tbody>
    </table>
</div>

@using(Html.BeginForm("DeleteUser", "Users")) {
    <input type="hidden" asp-for="@Model.Id"/>
    @*@Html.HiddenFor(x => x.Id)*@

    <input type="submit" value="Delete" class="btn"/>
    <a asp-action="Index" class="btn">Cancel</a>
}